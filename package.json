{
  "name": "gluer",
  "version": "0.0.7",
  "description": "Safely glues pure JavaScript code having developer experience top-notch",
  "homepage": "https://github.com/DZakh-packages/gluer#readme",
  "bugs": {
    "url": "https://github.com/DZakh-packages/gluer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DZakh-packages/gluer.git"
  },
  "license": "MIT",
  "author": "DZakh <dzakh.dev@gmail.com> (https://github.com/DZakh)",
  "main": "./src/index.js",
  "typings": "./src/index.d.ts",
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "dev": "rollup --config rollup.config.js --watch",
    "lint": "eslint --cache",
    "lint:check": "eslint --ext .js,.jsx ./src",
    "lint:fix": "npm run lint -- --fix --ext .js,.jsx ./src",
    "pre-commit": "lint-staged",
    "prettier:check": "prettier --check --ignore-unknown 'src/**/*'",
    "prettier:fix": "prettier --write --ignore-unknown 'src/**/*'",
    "test": "jest",
    "test:ci": "CI=true npm run test -- --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run lint -- --fix"
    ],
    "*.{js,jsx,ts,tsx,md,html,css,scss,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.13.8",
    "@babel/plugin-transform-runtime": "^7.16.10",
    "@babel/preset-env": "^7.13.8",
    "@jest/globals": "^26.6.2",
    "babel-jest": "^26.6.3",
    "eslint": "^8.7.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.5.1"
  }
}
